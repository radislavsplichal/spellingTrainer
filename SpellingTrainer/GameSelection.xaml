        <Label Content="Pick a deck from the Online database" HorizontalAlignment="Left" Margin="24,146,0,0" VerticalAlignment="Top"/>
        <Button Content="Find File" HorizontalAlignment="Left" Margin="257,108,0,0" VerticalAlignment="Top" Width="79" Height="23" Click="Button_Click_1"/>
        <Button x:Name="startGameButon" Content="Start Game" HorizontalAlignment="Left" Margin="148,303,0,0" VerticalAlignment="Top" Width="114" Height="62" Click="StartGameButon_Click"/>
