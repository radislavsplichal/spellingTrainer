        xmlns:local="clr-namespace:SpellingTrainer"
        mc:Ignorable="d"
        Title="GameSelection" Height="450" Width="800">
    <Grid>
        <Label Content="From File" HorizontalAlignment="Left" Margin="24,45,0,0" VerticalAlignment="Top"/>
        <TextBox Name="FilePath" HorizontalAlignment="Left" Height="23" Margin="114,48,0,0" TextWrapping="Wrap" Text="FilePath" VerticalAlignment="Top" Width="120"/>
